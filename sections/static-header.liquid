<script
  type="application/json"
  data-section-id="{{ section.id }}"
  data-section-type="static-header"
  data-section-data>
  {
    "settings": {
      "sticky_header": {{ section.settings.sticky_header | json }},
      "live_search": {
        "enable": {{ section.settings.enable_live_search | json }},
        "enable_images": {{ section.settings.enable_live_search_images | json }},
        "enable_content": {{ section.settings.enable_live_search_articles_pages | json }},
        "money_format": {{ shop.money_format | strip_html | json }},
        "context": {
          {% capture translation %}<span data-i18n='search.general.view_all_results'>{{ 'search.general.view_all_results' | t }}</span>{% endcapture %}
          "view_all_results": {{ translation | json }},
          {% capture translation %}<span data-i18n='search.general.view_all_products'>{{ 'search.general.view_all_products' | t }}</span>{% endcapture %}
          "view_all_products": {{ translation | json }},
          "content_results": {
            {% capture translation %}<span data-i18n='search.general.pages_and_posts_title'>{{ 'search.general.pages_and_posts_title' | t }}</span>{% endcapture %}
            "title": {{ translation | json }},
            {% capture translation %}<span data-i18n='search.general.pages_and_posts_no_results'>{{ 'search.general.pages_and_posts_no_results' | t }}</span>{% endcapture %}
            "no_results": {{ translation | json }}
          },
          "no_results_products": {
            {% capture translation %}<span data-i18n='search.general.no_results_products_title || { "terms": "*terms*"}'>{{ 'search.general.no_results_products_title' | t: terms: '*terms*' }}</span>{% endcapture %}
            "title": {{ translation | json }},
            {% capture translation %}<span data-i18n='search.general.no_results_products_message'>{{ 'search.general.no_results_products_message' | t }}</span>{% endcapture %}
            "message": {{ translation | json }}
          }
        }
      }
    },
    "currency": {
      "enable": {{ settings.enable_currency_converter | default: false }},
      "shop_currency": {{ shop.currency | json }},
      "default_currency": {{ settings.currency_converter_default | default: shop.currency | json }},
      "display_format": {{ settings.currency_display_format | json }},
      "money_format": {{ shop[settings.currency_display_format] | strip_html | json }},
      "money_format_no_currency": {{ shop.money_format | strip_html | json }},
      "money_format_currency": {{ shop.money_with_currency_format | strip_html | json }}
    }
  }
</script>

{% assign logo_height = section.settings.logo_height | default: 100 %}
{% assign logo_width = section.settings.logo_width | default: 200 %}
{% assign logo_size = logo_width | prepend: 'x' %}
{% style %}
  .site-logo {
    max-width: {{ logo_width }}px;
    max-height: {{ logo_height }}px;
  }
{% endstyle %}

<div
  class="
    site-header-main
    {% if section.settings.full_width_header %}
      site-header--full-width
    {% endif %}
  "
  data-site-header-main
  {% if section.settings.sticky_header %}data-site-header-sticky{% endif %}
  {% unless section.settings.show_mobile_search_bar %}data-site-header-mobile-search-button{% endunless %}
>
  <button class="site-header-menu-toggle" data-menu-toggle>
    <div class="site-header-menu-toggle--button" tabindex="-1">
      <span class="toggle-icon--bar toggle-icon--bar-top"></span>
      <span class="toggle-icon--bar toggle-icon--bar-middle"></span>
      <span class="toggle-icon--bar toggle-icon--bar-bottom"></span>
      <span class="visually-hidden"><span data-i18n='general.accessibility.menu'>{{ 'general.accessibility.menu' | t }}</span></span>
    </div>
  </button>

  {% unless section.settings.show_mobile_search_bar %}
    {% capture search_button %}
        <div class="site-header-mobile-search-button--button" tabindex="-1">
          {% include 'icon-search' %}
        </div>
    {% endcapture %}
    {% if section.settings.enable_live_search %}
      <button
        class="site-header-mobile-search-button"
        data-mobile-search-button
      >
        {{ search_button }}
      </button>
    {% else %}
      <a
        class="site-header-mobile-search-button"
        href="{{ routes.search_url }}"
      >
        {{ search_button }}
      </a>
    {% endif %}
  {% endunless %}

  <div class="header-wrapper">
    <div
      class="
        site-header-main-content
        {% if section.settings.small_promo_text != empty %}
          small-promo-enabled
        {% endif %}
      "
    >
      <div class="site-header-logo">
        <a
          class="site-logo"
          href="/">
          {% if section.settings.logo %}
            {% assign logo_alt = section.settings.logo.alt %}
            {% if logo_alt == '' %}
              {% assign logo_alt = shop.name | strip %}
            {% endif %}
            {% capture imgTranslation %}
            {%
              include 'rimg',
              img: section.settings.logo,
              class: 'site-logo-image',
              alt: logo_alt,
              size: logo_size
            %}
            {% if section.settings.logo_en != blank %}
              ||
              {%
                include 'rimg',
                img: section.settings.logo_en,
                class: 'site-logo-image',
                alt: logo_alt,
                size: logo_size
              %}
            {% endif %}
            {% endcapture %}
            <div data-i18n='{% render 'translationData' with imgTranslation %}'>{% render 'translationText' with imgTranslation %}</div>
          {% else %}
            {% if template == 'index' %}
              <h1 class="site-logo-text">
                <span data-i18n='{% render 'translationData' with  shop.name  %}'>{% render 'translationText' with  shop.name  %}</span>
              </h1>
            {% else %}
              <span class="site-logo-text">
                <span data-i18n='{% render 'translationData' with  shop.name  %}'>{% render 'translationText' with  shop.name  %}</span>
              </span>
            {% endif %}
          {% endif %}
        </a>
      </div>

      {%
        include 'live-search-form',
        quick_links: linklists[section.settings.quick_links],
        enable_live_search: section.settings.enable_live_search,
        enable_images: section.settings.enable_live_search_images,
        enable_content: section.settings.enable_live_search_articles_pages
      %}

      {% if section.settings.small_promo_text != blank or section.settings.small_promo_heading != blank %}
        <div class="small-promo">
          {% if section.settings.small_promo_icon != 'none' or section.settings.image %}
            <span
              class="
                small-promo-icon
                {% if section.settings.image %}
                  small-promo-icon--custom
                {% else %}
                  small-promo-icon--svg
                {% endif %}
              "
            >
              {% if section.settings.image == blank %}
                {% include 'icon-library', id: section.settings.small_promo_icon %}
              {% else %}
                {%
                  include 'rimg',
                  class: 'small-promo-custom-icon',
                  img: section.settings.image,
                  size: '60x'
                %}
              {% endif %}
            </span>
          {% endif %}

          <div class="small-promo-content">
            {% if section.settings.small_promo_heading != blank %}
              <span class="small-promo-heading">
                {% if section.settings.small_promo_link != blank %}
                <a
                  href="{{ section.settings.small_promo_link }}"
                >
                {% endif %}
                <span data-i18n='{% render 'translationData' with  section.settings.small_promo_heading %}'>{% render 'translationText' with  section.settings.small_promo_heading %}</span>
                {% if section.settings.small_promo_link != blank %}
                </a>
                {% endif %}
              </span>
            {% endif %}

            {% if section.settings.small_promo_text_mobile != blank %}
              <div class="small-promo-text-mobile">
                {% if section.settings.small_promo_link != blank %}
                <a
                  href="{{ section.settings.small_promo_link }}"
                >
                {% endif %}
                <span data-i18n='{% render 'translationData' with  section.settings.small_promo_text_mobile  %}'>{% render 'translationText' with  section.settings.small_promo_text_mobile  %}</span>
                {% if section.settings.small_promo_link != blank %}
                </a>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.small_promo_text != blank %}
              <div class="small-promo-text-desktop">
                {% if section.settings.small_promo_link != blank %}
                  <a
                    href="{{ section.settings.small_promo_link }}"
                  >
                  {% endif %}
                <span data-i18n='{% render 'translationData' with  section.settings.small_promo_text  %}'>{% render 'translationText' with  section.settings.small_promo_text  %}</span>
                {% if section.settings.small_promo_link != blank %}
                </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>

      {% endif %}

      {% if section.settings.small_promo_text2 != blank or section.settings.small_promo_heading2 != blank %}
        <div class="small-promo">
          {% if section.settings.small_promo_icon2 != 'none' or section.settings.image2 %}
            <span
              class="
                small-promo-icon
                {% if section.settings.image %}
                  small-promo-icon--custom
                {% else %}
                  small-promo-icon--svg
                {% endif %}
              "
            >
