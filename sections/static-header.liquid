                {% if section.settings.small_promo_link2 != blank %}
                </a>
                {% endif %}
              </span>
            {% endif %}

            {% if section.settings.small_promo_text_mobile2 != blank %}
              <div class="small-promo-text-mobile">
                {% if section.settings.small_promo_link2 != blank %}
                <a
                  href="{{ section.settings.small_promo_link2 }}"
                >
                {% endif %}
                <span data-i18n='{% render 'translationData' with  section.settings.small_promo_text_mobile2  %}'>{% render 'translationText' with  section.settings.small_promo_text_mobile2  %}</span>
                {% if section.settings.small_promo_link2 != blank %}
                </a>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.small_promo_text2 != blank %}
              <div class="small-promo-text-desktop">
                {% if section.settings.small_promo_link2 != blank %}
                  <a
                    href="{{ section.settings.small_promo_link2 }}"
