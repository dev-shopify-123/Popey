                  {% endif %}
                <span data-i18n='{% render 'translationData' with  section.settings.small_promo_text2  %}'>{% render 'translationText' with  section.settings.small_promo_text2  %}</span>
                {% if section.settings.small_promo_link2 != blank %}
                </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>

      {% endif %}

      
    </div>

    <div class="header-right-actions">
      <div class="header-login-buttons">
        {% if shop.customer_accounts_enabled %}
          {% unless customer %}
            <div class="site-header-account-link">
              <a href="/account/login">
                {% include 'icon-user' %}
              </a>
            </div>
          {% else %}
            <div class="site-header-account-link">
              <a href="/account">{% include 'icon-user' %}</a>
            </div>
          {% endunless %}
        {% endif %}
      </div>

      <div class="site-header-cart">
        <a class="site-header-cart--button" href="/cart">
          <span
            class="site-header-cart--count {% if cart.item_count > 0 %}visible{% endif %}"
            data-header-cart-count="{% if cart.item_count > 0 %}{{ cart.item_count }}{% endif %}">
          </span>

          {% include 'icon-cart' %}
          <span class="visually-hidden"><span data-i18n='general.accessibility.cart'>{{ 'general.accessibility.cart' | t }}</span></span>
        </a>
      </div>

      <div>
        {% render 'language-selector' %}
      </div>
    </div>
  </div>
</div>

<div
  class="
    site-navigation-wrapper

    {% if shop.customer_accounts_enabled or settings.enable_currency_converter %}
      site-navigation--has-actions
    {% endif %}

    {% if section.settings.full_width_header %}
      site-header--full-width
    {% endif %}
  "
  data-site-navigation
  id="site-header-nav"
>
  <nav
    class="site-navigation"
    aria-label="{{ 'general.accessibility.nav_main' | t }}"
  >
    {%
      include 'navmenu',
      side_menu: section.settings.side_menu,
      menu: section.settings.menu,
      blocks: section.blocks,
      is_mobile: false
    %}

    {% include 'site-header-actions' %}
  </nav>
</div>

{%
  include 'site-mobile-nav',
  blocks: section.blocks,
%}

