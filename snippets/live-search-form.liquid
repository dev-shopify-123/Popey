{% comment %}
  @param quick_links {LinkedList}
    Handle of menu to display

  @param enable_live_search {Bool}
    Determine whether search will be a auto prompt results

  @param enable_images {Bool}
    Display images in flydown

  @param enable_content {Bool}
    Display Articles and Pages results

  @param placeholder {String|Nil}
    Add a custom placeholder string
{% endcomment %}

{% assign has_quick_links = false %}
{% if quick_links.links.size > 0 %}
  {% assign has_quick_links = true %}
{% endif %}

{%- capture search_type -%}
  {% if enable_content %}
    article,page,product
  {% else %}
    product
  {% endif %}
{%- endcapture -%}

{%- assign placeholder_text = blank -%}
{%- if placeholder != blank -%}
  {%- assign placeholder_text = placeholder -%}
{% else %}
  {%- assign placeholder_text = 'search.form.placeholder' | t -%}
{%- endif -%}

<div class="live-search-wrapper">
  <div class="live-search" data-live-search>
    {%- assign filter = blank -%}
    {%- unless section.settings.filter_search_by == 'disabled' -%}
      {%- assign filter_search_by = section.settings.filter_search_by -%}

      {%- if search.performed -%}
        {%- assign field_prefix = filter_search_by | append: ':' -%}
        {%- if search.terms contains field_prefix -%}
          {%- assign filter = search.terms | split: field_prefix | last -%}
        {%- endif -%}
      {%- endif -%}
    {%- endunless -%}

    <form
      class="
        live-search-form
        form-fields-inline
        {% unless filter == blank %}live-search-filter-active{% endunless %}
      "
      action="/search"
      method="get"
      role="search"
      aria-label="Product"
      data-live-search-form
    >
      <input type="hidden" name="type" value="{{ search_type | replace: '  ', '' | strip_newlines }}">
      <div class="form-field no-label">
        {%- unless section.settings.filter_search_by == 'disabled' -%}
          {%- assign search_filter_content_first = blank -%}
          {%- assign search_filter_selected = blank -%}

          {%- case filter_search_by -%}
            {%- when 'product_type' -%}
              {% capture search_filter_content_rest %}
                {% for type in shop.types %}
                  {%- if type == blank -%}{%- continue -%}{%- endif -%}
                  {%- if type == filter -%}
                    {%- assign search_filter_selected = type -%}
                    {%- capture search_filter_content_first -%}
                      {%- assign translation0 =  type  | split: "z" -%}{%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}{%- if translation0[forloop.index0] != blank -%}{{ translation0[forloop.index0]  }}{% else %}{{ translation0[0]  }}{%- endif -%}{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="{{ filter_search_by }}:{{ type | escape }}" selected data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
                    {%- endcapture -%}
                  {%- else -%}
                    {%- assign translation0 =  type  | split: "z" -%}{%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}{%- if translation0[forloop.index0] != blank -%}{{ translation0[forloop.index0]  }}{% else %}{{ translation0[0]  }}{%- endif -%}{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="{{ filter_search_by }}:{{ type | escape }}" data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
                  {%- endif -%}
                {% endfor %}
              {% endcapture %}
            {%- when 'tag' -%}
              {%- capture search_filter_content_rest -%}
                {%- for tag in collections.all.all_tags -%}
                  {%- assign split_tag = tag | split: '_' -%}
                  {%- if split_tag[0] == 'searchfilter' -%}
                    {%- if tag == filter or collection.title == split_tag[1] -%}
                      {%- assign search_filter_selected = split_tag[1] -%}
                      {%- capture search_filter_content_first -%}
                        {%- assign translation0 =  split_tag[1]  | split: "z" -%}{%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}{%- if translation0[forloop.index0] != blank -%}{{ translation0[forloop.index0]  }}{% else %}{{ translation0[0]  }}{%- endif -%}{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="{{ filter_search_by }}:{{ tag | escape }}" selected data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
                      {%- endcapture -%}
                    {%- else -%}
                      {%- assign translation0 =  split_tag[1]  | split: "z" -%}{%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}{%- if translation0[forloop.index0] != blank -%}{{ translation0[forloop.index0]  }}{% else %}{{ translation0[0]  }}{%- endif -%}{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="{{ filter_search_by }}:{{ tag | escape }}" data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}
              {%- endcapture -%}
          {%- endcase -%}

          <span class="form-field-select-wrapper live-search-filter-wrapper">
            <select class="live-search-filter" data-live-search-filter data-filter-all="{{ 'search.form.filter_all' | t }}">
              {{ search_filter_content_first }}
              {%- assign translation0 =  'search.form.filter_all' | split: "z" -%}{%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}{%- if translation0[forloop.index0] != blank -%}{{ translation0[forloop.index0]  | t  }}{% else %}{{ translation0[0]  | t  }}{%- endif -%}{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="" {% if search_filter_selected == blank %}selected{% endif %} data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
              {%- assign langs = settings.lang_list | split: "," -%}{%- capture translationContent -%}{%- for lang in langs -%}------{%- unless forloop.last -%}||{%- endunless -%}{%- endfor -%}{%- endcapture -%}<option value="" disabled data-i18n='{% render 'translationData' with translationContent, notHtml: true %}'>{% render 'translationText' with translationContent %}</option>
              {{ search_filter_content_rest }}
            </select>
            <label class="live-search-filter-label form-field-select" data-live-search-filter-label>
              {%- if search_filter_selected != blank -%}
                <span data-i18n='{% render 'translationData' with  search_filter_selected  %}'>{% render 'translationText' with  search_filter_selected  %}</span>
              {%- else -%}
                <span data-i18n='search.form.filter_all'>{{ 'search.form.filter_all' | t }}</span>
              {%- endif -%}
            </label>
            {% include 'icon-chevron-down-small' %}
          </span>
        {%- endunless -%}
        <input
          class="form-field-input live-search-form-field"
          type="text"
          name="q"
          aria-label="{{ 'search.form.label' | t }}"
          data-i18n='search.form.placeholder || {"attr": "placeholder"}'
          placeholder="{{ 'search.form.placeholder' | t }}"
          {% if search.performed %}
            {%
              include 'search-sanitizer',
              search_terms: search.terms
            %}
            value="{{ sanitized_terms }}"
          {% endif %}
          autocomplete="off"
          data-live-search-input>
        <button
          class="live-search-takeover-cancel"
          type="button"
          data-live-search-takeover-cancel>
          {{ 'search.form.cancel' | t }}
        </button>

        <button
          class="live-search-button button-primary"
          type="submit"
          aria-label="{{ 'general.accessibility.search' | t }}"
          data-live-search-submit
        >
          <span class="search-icon search-icon--inactive">
            {% include 'icon-search' %}
          </span>
          <span class="search-icon search-icon--active">
            {% include 'icon-spinner' %}
          </span>
        </button>
      </div>

      <div class="search-flydown" data-live-search-flydown>
        <div class="search-flydown--placeholder" data-live-search-placeholder>
          <div class="search-flydown--product-items">
            {% for i in (1..3) %}
              <a class="search-flydown--product search-flydown--product" href="#">
                {% if enable_images %}
                  <div class="search-flydown--product-image">
                    {{ 'image' | placeholder_svg_tag: 'placeholder--image placeholder--content-image' }}
                  </div>
                {% endif %}

                <div class="search-flydown--product-text">
                  <span class="search-flydown--product-title placeholder--content-text"></span>
                  <span class="search-flydown--product-price placeholder--content-text"></span>
                </div>
              </a>
            {% endfor %}
          </div>
        </div>

        <div class="search-flydown--results {% if enable_content %}search-flydown--results--content-enabled{% endif %}" data-live-search-results></div>

        {% if has_quick_links %}
          <div class="search-flydown--quicklinks" data-live-search-quick-links>
            <span class="search-flydown--quicklinks-title"><span data-i18n='{% render 'translationData' with  quick_links.title  %}'>{% render 'translationText' with  quick_links.title  %}</span></span>

            <ul class="search-flydown--quicklinks-list">
              {% for link in quick_links.links %}
                <li class="search-flydown--quicklinks-item">
                  <a class="search-flydown--quicklinks-link" href="{{ link.url }}">
                    <span data-i18n='{% render 'translationData' with  link.title  %}'>{% render 'translationText' with  link.title  %}</span>
                  </a>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
    </form>
  </div>
</div>
