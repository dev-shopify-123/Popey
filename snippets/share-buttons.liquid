{% comment %}
  @param social_url {String}
    URL to share

  @param social_title {Object}
    If sending data to a service, description or title to share

  @param social_image {String|Boolean}
    If sending data to a service, URL of image to share, or false for no image
{% endcomment %}

{% assign share_url = social_url | url_param_escape %}
{% assign share_title = social_title | url_param_escape %}
{% assign share_image = false %}
{% if social_image %}
  {% assign share_image = social_image | url_param_escape %}
{% endif %}

<aside class="share-buttons" aria-label="{{ snippet_title | t }}">

  <span class="share-buttons--title">
    <span data-i18n='{{ snippet_title }}'>{{ snippet_title | t }}</span>
  </span>

  <div class="share-buttons--list">
    <a
      class="share-buttons--button share-buttons--facebook"
      target="_blank"
      href="https://www.facebook.com/sharer.php?u={{ share_url }}">
      {%-
        include 'social-icon',
        id: 'facebook'
      -%}
      <span class="visually-hidden"><span data-i18n='general.accessibility.share_on_facebook'>{{ 'general.accessibility.share_on_facebook' | t }}</span></span>
    </a>

    <a
      class="share-buttons--button share-buttons--twitter"
      target="_blank"
      href="https://twitter.com/share?url={{ share_url }}">
      {%-
        include 'social-icon',
        id: 'twitter'
      -%}
      <span class="visually-hidden"><span data-i18n='general.accessibility.share_on_twitter'>{{ 'general.accessibility.share_on_twitter' | t }}</span></span>
    </a>

    <a
      class="share-buttons--button share-buttons--linkedin"
      target="_blank"
      href="https://www.linkedin.com/shareArticle?mini=true&url={{ share_url }}&title={{ share_title }}">
      {%-
        include 'social-icon',
        id: 'linkedin'
      -%}
      <span class="visually-hidden"><span data-i18n='general.accessibility.share_on_linkedin'>{{ 'general.accessibility.share_on_linkedin' | t }}</span></span>
    </a>

    {% if share_image %}
      <a
        class="share-buttons--button share-buttons--pinterest"
        target="_blank"
        href="https://pinterest.com/pin/create/button/?url={{ share_url }}&amp;media={{ share_image }}&amp;description={{ share_title }}">
        {%-
          include 'social-icon',
          id: 'pinterest'
        -%}
        <span class="visually-hidden"><span data-i18n='general.accessibility.share_on_pinterest'>{{ 'general.accessibility.share_on_pinterest' | t }}</span></span>
      </a>
    {% endif %}
  </div>
</aside>
